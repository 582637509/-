package cn.tedu.comic.mapper;

import cn.tedu.comic.entity.User;

public interface UserMapper {
	
	/**
	 * 插入用户
	 * @return 受影响行数
	 */
	Integer insert(User user);
	
	/**
	 * 根据用户名查询用户
	 * @param username 用户名
	 * @return 用户数据
	 */
	User selectUserByUserName(String username);
	
	/**
	 * 根据id查用户
	 * @param id 用户id
	 * @return 用户数据
	 */
	User selectUserById(Integer id);
}